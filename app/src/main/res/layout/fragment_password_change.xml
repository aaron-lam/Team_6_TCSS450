<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.PasswordChangeFragment">

    <Button
        android:id="@+id/button_password_change_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/password_change_submit_button"
        app:layout_constraintEnd_toEndOf="@+id/field_password_change_retype_password"
        app:layout_constraintTop_toBottomOf="@+id/field_password_change_retype_password" />

    <EditText
        android:id="@+id/field_password_change_new_password"
        android:layout_width="369dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/password_change_new_password_hint"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/field_password_change_old_password"
        app:layout_constraintStart_toStartOf="@+id/field_password_change_old_password"
        app:layout_constraintTop_toBottomOf="@+id/field_password_change_old_password" />

    <EditText
        android:id="@+id/field_password_change_old_password"
        android:layout_width="369dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/password_change_old_password_hint"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/field_password_change_email"
        app:layout_constraintStart_toStartOf="@+id/field_password_change_email"
        app:layout_constraintTop_toBottomOf="@+id/field_password_change_email" />

    <EditText
        android:id="@+id/field_password_change_retype_password"
        android:layout_width="369dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/password_change_retype_password_hint"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/field_password_change_new_password"
        app:layout_constraintStart_toStartOf="@+id/field_password_change_new_password"
        app:layout_constraintTop_toBottomOf="@+id/field_password_change_new_password" />

    <EditText
        android:id="@+id/field_password_change_email"
        android:layout_width="369dp"
        android:layout_height="42dp"
        android:layout_marginTop="248dp"
        android:ems="10"
        android:hint="@string/all_email_address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>