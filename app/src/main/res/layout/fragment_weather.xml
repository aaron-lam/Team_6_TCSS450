<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weatherLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.weather.WeatherFragment">

    <TextView
        android:id="@+id/label_weather_date"
        android:layout_width="330dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="132dp"
        android:text="Current Weather"
        android:textColor="?attr/title_text_color"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/weather_currentWeather"
        android:layout_width="92dp"
        android:layout_height="86dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/navbar_weather_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_weatherDisplay"
        android:layout_width="309dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="96dp"
        android:text="Tacoma, WA: 47Â°F"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_weather_date" />

</androidx.constraintlayout.widget.ConstraintLayout>